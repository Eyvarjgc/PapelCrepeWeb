---
  interface Props {
    name: string;
    size: string;
    price: string;
    img:string;
    font:string;
  }
  const {name, size, price, img, font } = Astro.props
---

<div class=" h-80 w-48  relative px-2 md:w-52  ">
  
    <img src={img} alt="" class=" absolute top-0 z-10 h-52 w-48 left-0 right-0 mx-auto my-0">


  <div class="bg-cardThree flex flex-col  justify-end text-start h-52 absolute left-0 right-0 bottom-0 px-4 rounded-md">
    
    <h1 class="font-semibold md:text-xl text-lg   text-black"> <span class=`${font}`>{name}</span> </h1>
  
    <p class=" text-xl font-medium caveat text-white ">{size}</p>
  
    
    <p class=` text-xl font-semibold ${font}`>Precio</p>
    <span class="text-2xl pl-4 font-bold font2 ">$ {price}</span>

  </div>
  

</div>